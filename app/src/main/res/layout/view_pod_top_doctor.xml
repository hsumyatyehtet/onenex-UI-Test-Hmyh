<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/tvTopDoctor"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/nunito_sans_semi_bold"
        android:layout_marginHorizontal="@dimen/margin_medium_2"
        android:text="Top Doctor"
        android:textColor="@color/colorTitle"
        android:textSize="18sp" />

    <TextView
        android:id="@+id/tvViewAll"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/nunito_sans_semi_bold"
        android:layout_marginHorizontal="@dimen/margin_medium_2"
        android:layout_alignParentEnd="true"
        android:text="View All"
        android:textColor="#5185FE"
        android:textSize="18sp" />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rvTopDoctorCategory"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="@dimen/margin_medium"
        android:layout_marginTop="@dimen/margin_medium"
        android:layout_below="@+id/tvTopDoctor"/>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rvTopDoctor"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="@dimen/margin_medium_2"
        android:layout_marginTop="@dimen/margin_medium_2"
        android:layout_below="@+id/rvTopDoctorCategory"/>


</RelativeLayout>