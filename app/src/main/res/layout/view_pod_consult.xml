<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"

    app:cardCornerRadius="10dp"
    app:cardElevation="2dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/margin_medium"
        android:layout_marginTop="@dimen/margin_card_medium_2"
        android:layout_marginBottom="@dimen/margin_medium">

        <TextView
            android:id="@+id/tvTitleConsult"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/nunito_sans_semi_bold"
            android:text="Consult with Top Specialists"
            android:textColor="@color/colorTitle"
            android:textSize="@dimen/text_regular" />

        <ImageView
            android:id="@+id/ivConsult"
            android:layout_width="120dp"
            android:layout_height="@dimen/margin_100"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:src="@drawable/rectagle" />

        <TextView
            android:id="@+id/tvDescription"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/tvTitleConsult"
            android:layout_marginTop="@dimen/margin_medium"
            android:layout_toStartOf="@+id/ivConsult"
            android:fontFamily="@font/nunito_sans"
            android:text="Consult with Top Doctors over Video calls and Recover your mental Helth"
            android:textColor="@color/colorTitle"
            android:textSize="@dimen/text_small" />

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tvDescription"
            android:layout_marginTop="@dimen/margin_medium_3"
            android:background="@drawable/bg_reactangle_primary_10">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:layout_marginHorizontal="@dimen/margin_medium"
                android:layout_marginVertical="@dimen/margin_medium"
                android:fontFamily="@font/nunito_sans"
                android:text="Consult Now"
                android:textColor="@color/white"
                android:textSize="@dimen/text_small" />

        </RelativeLayout>

    </RelativeLayout>


</androidx.cardview.widget.CardView>